<div class="show">
	<h2><%= @movie.title %></h2>
	<div class="box">
		<div class="trailer">
		<iframe src="http://www.youtube.com/embed/<%= @id %>" width=640 height=480 frameborder=0></iframe>
		</div>
		<p><%= @movie.plot %></p>
			<% @movie.actors.each do |a| %>
				<div class ="actors">
					<img src="<%= a.photo_url %>">
					<div class="name"><%= a.name %></div>
				</div>
			<% end %>
	</div>
	<a href="/" class="home">Home</a>
</div>
